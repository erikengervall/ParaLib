{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es6",
    "target": "es2017",
    "allowJs": true,
    "baseUrl": "./src",
    "paths": { "src": ["./*"] },
    "esModuleInterop": true,
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true
  }
}
